#!/bin/sh

{
	# Date
	date "+ %b %d %H:%M"

	# Volume
	amixer get Master |
		awk -F '[][]' '
		BEGIN {print "ðŸ”Š"}
		/[0-9]{1,3}%/ {
			print $2
		}
		/\[off]/ {
			print "(M)"
		}'

	# Network
	awk '
	BEGIN {print "ðŸ“¶"}
	{
		if ($0 ~ /^up$/) {
			n=1
			exit
		}
	}
	END {
		if (n)
			print "ON"
		else
			print "OFF"
	}' /sys/class/net/*/operstate

	# Battery
	awk 'BEGIN {print "ðŸ”‹"} /Charging/ {printf "+"} /[0-9]/ {print $0 "%"}' \
		/sys/class/power_supply/BAT*/status /sys/class/power_supply/BAT*/capacity
} | tr '\n' ' '
