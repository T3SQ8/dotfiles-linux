#!/bin/sh

for file do
	noext=${file%.*}
	dirpath=${noext##*/}
	ext=${file##*.}
	case $ext in
		roff)
			groff -e -ms "$file" -Tpdf > "$noext.pdf" ;;
		tex)
			pdflatex -output-directory /tmp "$file" && cp "/tmp/$dirpath.pdf" "$noext.pdf" ;;
		md)
			pandoc "$file" -o "$noext.html" ;;
		c)
			gcc "$file" -o "$noext" ;;
		*)
			echo "$file: Unknown filetype" ;;
	esac
done
